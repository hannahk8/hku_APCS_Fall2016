public class HourglassCode {
	public static void main(String[] args) {
		//printBase(); //Print the firstline
		topHalf(); //Print the top half
	}

	public static void topHalf(){
		for (int i=1; i <=4; i++){//print each line
			//print spaces
			for (int j=1; j<=i; j++){
				System.out.print(" ");
			}
			System.out.print("\\");
			for (int k = 8 - (2*i); k > 0; k -= 2) { 
				System.out.print(":::");
			}
			System.out.println("/");

		}
	}
}
